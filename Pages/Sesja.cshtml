@page
@model FizzBuzz.Pages.LiczbaModel
@{
}
<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Zapisane w sesji</h2>
    </div>
    <div class="col-12 border p-3 mt-3">
        <form method="post">
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        <label>Liczba</label>
                    </th>
                    <th>
                        <label>Wynik</label>
                    </th>
                    <th>
                        <label>Data</label>
                    </th>
                    <th>

                    </th>
                </tr>
                @foreach (var item in Model.Lista.Reverse())
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.FizzBuzz)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Result)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Date)
                        </td>
                        <td>
                            <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Usuń</button>
                        </td>
                    </tr>
                }
            </table>
        </form>
    </div>
</div>